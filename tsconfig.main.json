{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules"
  ]
}