{
  "name": "multi-screen-stock-chart",
  "version": "1.1.0",
  "description": "Multi-screen stock chart application with 4-pane synchronized display",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "webpack --config webpack.main.config.js --mode development --watch",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "webpack --config webpack.main.config.js --mode production",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:portable": "electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "fetch-daily": "node scripts/fetch-jquants-daily.js",
    "fetch-daily-only": "echo 'Weekly/Monthly now uses VIEWs - no separate script needed'"
  },
  "keywords": [
    "electron",
    "react",
    "stock",
    "chart",
    "trading",
    "lightweight-charts"
  ],
  "author": "Jimmy",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@supabase/supabase-js": "^2.57.0",
    "axios": "^1.11.0",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^17.2.1",
    "lightweight-charts": "^4.1.0",
    "luxon": "^3.7.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.jimmy.multi-screen-stock-chart",
    "productName": "Multi-Screen Stock Chart",
    "directories": {
      "output": "release/v1.1.0"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "category": "public.app-category.finance",
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Multi-Screen Stock Chart"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
